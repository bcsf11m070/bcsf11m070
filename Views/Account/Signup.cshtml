@model MvcApplication4.Models.Customer
<div class="center_content">
    <div class="center_title_bar">Sign Up</div>
    <div class="prod_box_big">
        <div class="top_prod_box_big"></div>
        <div class="center_prod_box_big">
            <div class="contact_form">
                @using(Html.BeginForm("RegisterCustomer","Account",FormMethod.Post))
                { 
                    <div class="form_row">
                        <strong>@Html.LabelFor(model => model.Name, new { @class = "contact_input" })</strong>
                        @Html.TextBoxFor(model => model.Name, new { @class = "contact_input", Id = "username", required = "required" })
                        <input id="check" type="button" value="Check"/>
                        <p id="avail"></p>
                        <script>
                            $(document).ready(function () {
                                $('#check').click(function () {
                                    var n = $('#username').val();
                                    $.getJSON('/Account/checkUser?name='+n, function (data) {
                                        $('#avail').text(data);
                                    });
                                });
                            });
                        </script>
                    </div>
                    <div class="form_row">
                        <strong>@Html.LabelFor(model => model.Email, new { @class="contact_input"})</strong>
                        @Html.TextBoxFor(model => model.Email, new { @class = "contact_input",type="email", required = "required" })
                    </div>
                    <div class="form_row">
                        <strong>@Html.LabelFor(model => model.Phone, new { @class = "contact_input" })</strong>
                        @Html.TextBoxFor(model => model.Phone, new { @class = "contact_input", type="number", required = "required" })
                    </div>
                    <div class="form_row">
                        <strong>@Html.LabelFor(model => model.Adderss, new { @class = "contact_input" })</strong>
                        @Html.TextBoxFor(model => model.Adderss, new { @class = "contact_input", type="text", required = "required" })
                    </div>
                        <div class="form_row">
                            <strong>@Html.LabelFor(model => model.Password, new { @class = "contact_input" })</strong>
                            @Html.PasswordFor(model => model.Password, new { @class = "contact_input", required = "required" })
                        </div>
                    <div class="form_row"> <button type="submit" value="Sign Up">Sign Up</button> </div>
                }
                <label><strong>@TempData["message"]</strong></label>
            </div>
        </div>
        <div class="bottom_prod_box_big"></div>
    </div>
</div>
<!-- end of center content -->
