<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Electronix Store</title>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script type="text/javascript" src="~/Scripts/boxOver.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="main_container" >
        <div class="top_bar">
            <div class="top_search">
                <form method="post" action="/Account/SearchProduct" >
                    <div class="search_text"><a href="#">Advanced Search</a></div>
                    <input type="text" class="search_input" name="search" />
                    <input type="image" src="~/Images/search.gif" class="search_bt" />
                    </form>
            </div>
            <div class="languages">
                <div class="lang_text">Languages:</div>
                <a href="#" class="lang"><img src="~/Images/en.gif" alt="" border="0" /></a> <a href="#" class="lang"><img src="~/Images/de.gif" alt="" border="0" /></a>
            </div>
        </div>
        <div id="header">
            <div id="logo"> <a href="#"><img src="~/Images/logo.png" alt="" border="0" width="237" height="140" /></a> </div>
            <div class="oferte_content">
                <div class="top_divider"><img src="~/Images/header_divider.png" alt="" width="1" height="164" /></div>
                <div class="oferta">
                    <div class="oferta_content">
                        <img src="~/Images/laptop.png" width="94" height="92" alt="" border="0" class="oferta_img" />
                        <div class="oferta_details">
                            <div class="oferta_title">Samsung GX 2004 LM</div>
                            <div class="oferta_text"> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco </div>
                            <a href="/Home/details" class="details">details</a>
                        </div>
                    </div>
                    <div class="oferta_pagination"> <span class="current">1</span> <a href="#">2</a> <a href="#">3</a> <a href="#">4</a> <a href="#">5</a> </div>
                </div>
                <div class="top_divider"><img src="~/Images/header_divider.png" alt="" width="1" height="164" /></div>
            </div>
            <!-- end of oferte_content-->
        </div>
        <div id="main_content">
            <div id="menu_tab">
                <div class="left_menu_corner"></div>
                <ul class="menu">
                    <li>@Html.ActionLink("Home", "IndexCustomer", "Account", null, new { @class = "nav1" })</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Specials", "IndexCustomer", "Account", null, new { @class = "nav2" })</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("My Cart", "MyAccount", "Account", null, new { @class = "nav4" })</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Contact Us", "ContactByCustomer", "Account", null, new { @class = "nav6" })</li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Sign Out", "SignIn", "Account", null, new { @class = "nav4" })</li>
                    <!--<li><a href="/Account/SignIn" class="nav4">Sign out</a></li>-->
                    <li class="divider"></li>
                </ul>

                <div class="right_menu_corner"></div>
            </div>
            <!-- end of menu tab -->
            <div class="crumb_navigation"> Navigation: <span class="current">Home</span> </div>
            <div class="left_content">
                <div class="title_box">Categories</div>

                <form id="Cat" name="Cat" action="~/Account/CategoryDetail" method="post">
                    <!--<ul class="left_menu" id="Cat" name="Cat">-->
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " name="Submit" type="Submit" value="Processors" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="even" name="Submit" type="Submit" value="Motherboards" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="odd" name="Submit" type="Submit" value="Desktop" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="even" name="Submit" type="Submit" value="Laptop" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="odd" name="Submit" type="Submit" value="others" /><br />
                    <!--</ul>-->
                </form>

                <div class="title_box">Special Products</div>
                <div class="border_box">
                    <div class="product_title"><a href="details.html">Motorola 156 MX-VL</a></div>
                    <div class="product_img"><a href="details.html"><img src="~/images/laptop.png" alt="" border="0" /></a></div>
                    <div class="prod_price"><span class="reduce">350$</span> <span class="price">270$</span></div>
                </div>
                <div class="title_box">Newsletter</div>
                <div class="border_box">
                    <input type="text" name="newsletter" class="newsletter_input" value="your email" />
                    <a href="#" class="join">join</a>
                </div>
                <div class="banner_adds"> <a href="#"><img src="~/Images/bann2.jpg" alt="" border="0" /></a> </div>
            </div>
            <!-- end of left content -->
            @RenderBody()

            <div id="rt" class="right_content">
                @RenderSection("Cart",required:false)

                <div class="title_box">What’s new</div>
                <div class="border_box">
                    <div class="product_title"><a href="details.html">Motorola 156 MX-VL</a></div>
                    <div class="product_img"><a href="details.html"><img src="~/images/p2.gif" alt="" border="0" /></a></div>
                    <div class="prod_price"><span class="reduce">350$</span> <span class="price">270$</span></div>
                </div>
                <div class="title_box">Manufacturers</div>
                <form method="post" action="~/Account/BrandDetails">
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " name="Submit" type="Submit" value="Sony" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="even" name="Submit" type="Submit" value="Samsung" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="odd" name="Submit" type="Submit" value="Daewoo" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="even" name="Submit" type="Submit" value="LG" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="odd" name="Submit" type="Submit" value="Fujitsu" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="odd" name="Submit" type="Submit" value="Motorola" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="even" name="Submit" type="Submit" value="Phillips" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="odd" name="Submit" type="Submit" value="Beko" /><br />
                    <input style="width:200px; background: url(~/Image/menu_title_bg.gif) " class="odd" name="Submit" type="Submit" value="Others" />
                    <br />
                    <div class="banner_adds"> <a href="#"><img src="~/images/bann1.jpg" alt="" border="0" /></a> </div>
                </form>
            </div>
            <!-- end of right content -->
        </div>
        <!-- end of main content -->
        <div class="footer">
            <div class="left_footer"> <img src="~/images/footer_logo.png" alt="" width="170" height="49" /> </div>
            <div class="center_footer">
                Generation21. All Rights Reserved 2008<br />
                <a href="#"><img src="~/images/csscreme.jpg" alt="csscreme" border="0" /></a><br />
                <img src="~/images/payment.gif" alt="" />
            </div>
            <div class="right_footer"> <a href="~/Views/Home/index.cshtml">@Html.ActionLink("Home", "Index", "Home")</a> <a href="#">about</a> <a href="#">sitemap</a> <a href="#">rss</a> <a href="~/Views/Home/contact.cshtml">@Html.ActionLink("Contact", "contact", "Home")</a> </div>
        </div>
    </div>
    <!-- end of main_container -->
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
